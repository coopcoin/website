---
title: Coopcoin
---

.bRow
  .bRow-content
    .bList
      .bList-item
        %h1.aHeadline.asLeft.asLarge= t('index.header.headline')
        .aText
          .aText-paragraph= t('index.header.text1')
      .bList-item
        = svg_tag('homepage_illustration')

.bRow.asSecondary.withLargePadding
  .bRow-content
    %h2.aHeadline= t('index.core.headline')
    .bList
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element1.headline')
          .aTextWithHeadline-text= t('index.core.element1.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element2.headline')
          .aTextWithHeadline-text= t('index.core.element2.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element3.headline')
          .aTextWithHeadline-text= t('index.core.element3.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element4.headline')
          .aTextWithHeadline-text= t('index.core.element4.text')

.bRow.withLargePadding
  .bRow-content
    %h2.aHeadline.asLarger= t('index.things.headline')
    .bList.withThreeItems
      - 9.times do |i|
        .bList-item
          .aIconWithText
            .aIconWithText-icon= svg_tag("icons/home/icon#{i+1}")
            .aIconWithText-text
              :markdown
                #{t("index.things.item#{i+1}")}

.bRow.asSecondary
  .bRow-content
    .aHeadline.asLarger= t('index.whitepaper.headline1')
    .aHeadline.asLarger.withSmallMargin= t('index.whitepaper.headline2')
    = link_to t('index.whitepaper.button'), '#', class: 'aButton'
.bRow
  .bRow-content
    .bList.as-50-50
      .bList-item
        = svg_tag('buisness_case')
      .bList-item
        %h3.aHeadline.asLeft.withSmallMargin= t('index.business_case.pre_headline')
        %h2.aHeadline.asSpecialHome.asLeft.withSmallMargin= t('index.business_case.headline')
        .aText
          .aText-paragraph= t('index.business_case.subline1')
          .aText-paragraph= t('index.business_case.subline2')
