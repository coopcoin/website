---
title: CoopCoin - A decentralized Asset-Based Token platform
---

.bRow
  .bRow-content
    .bList
      .bList-item
        %h1.aHeadline.asLeft.asLarger= t('index.header.headline')
        .aText
          .aText-paragraph= t('index.header.text1')
      .bList-item
        = svg_tag('homepage_illustration')

.bRow.asSecondary.withLargePadding
  .bRow-content
    %h2.aHeadline= t('index.core.headline')
    .bList.asCentered
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element1.headline')
          .aTextWithHeadline-text= t('index.core.element1.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element2.headline')
          .aTextWithHeadline-text= t('index.core.element2.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element3.headline')
          .aTextWithHeadline-text= t('index.core.element3.text')
      .bList-item
        .aTextWithHeadline
          .aTextWithHeadline-headline= t('index.core.element4.headline')
          .aTextWithHeadline-text= t('index.core.element4.text')

.bRow.withLargePadding
  .bRow-content
    %h2.aHeadline.asLarger.asUppercase= t('index.things.headline')
    .bList.withThreeItems
      - 9.times do |i|
        .bList-item
          .aIconWithText.asSplit
            .aIconWithText-icon= svg_tag("icons/home/icon#{i+1}")
            .aIconWithText-text
              :markdown
                #{t("index.things.item#{i+1}")}

.bRow.asSecondary.asWhitepaper
  .bRow-content
    .aHeadline.asLarger.withSmallMargin
      = t('index.whitepaper.headline1')
    .aHeadline
      = t('index.whitepaper.headline2')
    .uCentered= link_to t('index.whitepaper.button'), '/pdfs/CoopCoin-whitepaper.pdf', class: 'aButton pdf-download'
.bRow
  .bRow-content
    .bList.as-50-50
      .bList-item.asCentered
        %iframe{width: 560, height: 315, src: "https://www.youtube.com/embed/QZBiV8yF7SE", frameborder: "0", allow: "autoplay; encrypted-media", allowfullscreen: "1"}
      .bList-item
        %h3.aHeadline.asLarger.asLeft.withSmallMargin= t('index.business_case.pre_headline')
        %h2.aHeadline.asSpecialHome.asLarger.asLeft.withSmallMargin= link_to t('index.business_case.headline'), "/abt100"
        .aText.asLarge
          .aText-paragraph= t('index.business_case.subline1')
          .aText-paragraph= t('index.business_case.subline2')
